<Window x:Class="ACTR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACTR"
        mc:Ignorable="d"
        Title="Analog Clock Time Reader" Height="600" Width="800">
    <DockPanel>
        
        <!-- Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Exit"/>
            </MenuItem>
        </Menu>
        
        <!-- Content -->
        <StackPanel Margin="10">
            
            <!-- Time display -->
            <Label FontWeight="Bold">Time: </Label>
            <Separator/>
            <TextBlock FontSize="80" TextAlignment="Center" >00:00:00</TextBlock>
            <Separator/>


            <!-- Processing step selection -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <Label Grid.Column="0" FontWeight="Bold">Processig step:</Label>
                    <ComboBox Grid.Column="0" SelectedIndex="0">
                        <ComboBoxItem>a</ComboBoxItem>
                        <ComboBoxItem>b</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </Grid>

            
            <!-- Images -->
            <Grid Margin="0 10 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Source image -->
                <StackPanel Grid.Column="0" Margin="10">
                    <Label>Source image:</Label>
                    <Image/>
                </StackPanel>

                <!-- Processed image -->
                <StackPanel Grid.Column="1" Margin="10">
                    <Label>Processed image, step *:</Label>
                    <Image/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </DockPanel>
</Window>
